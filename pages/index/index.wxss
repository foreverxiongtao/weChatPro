/**index.wxss**/

.index-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.index-item-image {
  width: 240rpx;
  height: 240rpx;
}

.index-list {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  border: 1px solid #e6e6e6;
  padding: 2rpx;
}

.index-item-container {
  margin-left: 20rpx;
  display: flex;
  width: 470rpx;
  flex-direction: column;
}

.index-item-title {
  font-size: 40rpx;
  color: #333;
}

.index-item-desc {
  margin-top: 4rpx;
  font-size: 36rpx;
  color: #666;
}

.index-item-content {
  margin-top: 4rpx;
  font-size: 28rpx;
  color: #999;
}

.index-item-footer {
  margin-top: 14rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.index-item-detail {
  height: 60rpx;
  width: 60rpx;
  margin-right: 20rpx;
  margin-left: 0;
  padding: 0;
}

.index-item-contact {
  height: 60rpx;
  width: 60rpx;
  margin-left: 10rpx;
  padding: 0;
}
